
@using PagedList.Core.Mvc;

@model PagedList.Core.IPagedList<MarketOnl.Data.Product>



@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_BannerAreaView.cshtml";
}




<div class="container">
    <div class="row">
        <div class="col-xl-3 col-lg-4 col-md-5">
            <div class="sidebar-categories">
                <div class="head">Danh mục sản phẩm</div>

                @await Component.InvokeAsync("MenuLoai");
            

            </div>
            <div class="sidebar-filter mt-50">
                <div class="top-filter-head">Product Filters</div>

                <div class="common-filter">
                    <div class="head">Price</div>
                    <div class="price-range-area">
                        <div id="price-range"></div>
                        <div class="value-wrapper d-flex">
                            <div class="price">Price:</div>
                            <span>$</span>
                            <div id="lower-value"></div>
                            <div class="to">to</div>
                            <span>$</span>
                            <div id="upper-value"></div>
                        </div>
                    </div>
                </div>
            </div>

          



        </div>






        <div class="col-xl-9 col-lg-8 col-md-7">
            <!-- Start Filter Bar -->
            <div class="filter-bar d-flex flex-wrap align-items-center">
                <div class="sorting">
                    <select>
                        <option value="1">Default sorting</option>
                        <option value="1">Default sorting</option>
                        <option value="1">Default sorting</option>
                    </select>
                </div>
                <div class="sorting mr-auto">
                    <select>
                        <option value="1">Show 12</option>
                        <option value="1">Show 12</option>
                        <option value="1">Show 12</option>
                    </select>
                </div>
             
            </div>
            <!-- End Filter Bar -->
            <!-- Start Best Seller -->
            <section class="lattest-product-area pb-40 category-list">
                <div class="row">

                    @if (Model != null && Model.Count() > 0)
                    {
                      

                        foreach (var item in Model)
                        {
                            string url = $"products/{item.Alias}-{item.ProductId}.html";
                           
                            <div class="col-lg-4 col-md-6">
                                <div class="single-product">
                                    <img class="img-fluid" src="~/images/products/@item.Picture" alt="@item.Title">
                                    <div class="product-details">
                                        <h6 class="title-Products">
                                            @item.Title
                                        </h6>
                                        <div class="price">
                                            <h6>@item.PriceSale.Value.ToString("#,##0") VNĐ</h6>
                                            <h6 class="l-through">@item.Price.Value.ToString("#,##0") VNĐ</h6>
                                        </div>
                                        <div class="prd-bottom">

                                            <a href="#" data-id="@item.ProductId" class="social-info btnAddToCart">
                                                <span class="ti-bag "></span>
                                                <p class="hover-text">Giỏ hàng</p>
                                            </a>

                                            <a href="" class="social-info">
                                                <span class="lnr lnr-heart"></span>
                                                <p class="hover-text">Yêu thích</p>
                                            </a>
                                            <a href="" class="social-info">
                                                <span class="lnr lnr-sync"></span>
                                                <p class="hover-text">So sánh</p>
                                            </a>
                                            <a href="@url" class="social-info">
                                                <span class="lnr lnr-move"></span>
                                                <p class="hover-text">Xem thêm</p>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }





                </div>
            </section>
            <!-- End Best Seller -->
            <!-- Start Filter Bar -->
            <div class="filter-bar d-flex flex-wrap align-items-center">
                <div class="sorting mr-auto">
                    <select>
                        <option value="1">Show 12</option>
                        <option value="1">Show 12</option>
                        <option value="1">Show 12</option>
                    </select>
                </div>


                <div class="pagination-area pt-10">

                    <div aria-label="Page navigation example" class="mt-3" style="float:left;">
                        <ul class="pagination">
                            <pager class="pager-controller" list="@Model" asp-controller="products" asp-action="index"></pager>
                        </ul>
                    </div>

                </div>

               
               
            </div>

           
            <!-- End Filter Bar -->
        </div>
    </div>
</div>



