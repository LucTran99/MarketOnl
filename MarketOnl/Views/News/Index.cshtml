@using PagedList.Core.Mvc;

@model PagedList.Core.IPagedList<MarketOnl.Data.News>



@{
    ViewData["Title"] = "Tin tức";
    Layout = "~/Views/Shared/_BannerAreaView.cshtml";
}



<!--================Blog Area =================-->


<style>

    .img-news {
        width:510px;
        height:257px;
        object-fit:cover;
    }


</style>



<section class="blog_area">
    <div class="container">
        <div class="row">





            <div class="col-lg-8">
                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        string url = $"news/{item.Alias}-{item.NewsId}.html";

                        <div class="blog_left_sidebar">
                            <article class="row blog_item">
                                <div class="col-md-3">
                                    <div class="blog_info text-right">
                                        <div class="post_tag">
                                            <a href="#">Food,</a>
                                            <a class="active" href="#">Technology,</a>
                                            <a href="#">Politics,</a>
                                            <a href="#">Lifestyle</a>
                                        </div>
                                        <ul class="blog_meta list">

                                            <li><a href="#">@item.CreatedOn.Value.ToString("dd/MM/yyyy")<i class="lnr lnr-calendar-full"></i></a></li>
                                            <li><a href="#">@item.Views Lượt xem<i class="lnr lnr-eye"></i></a></li>
                                         
                                        </ul>
                                    </div>
                                </div>

                                <div class="col-md-9">
                                    <div class="blog_post">
                                        <img src="~/images/news/@item.Image" class="img-news" alt="@item.Title">
                                        <div class="blog_details">
                                            <a href="#">
                                                <h2>@item.Title</h2>
                                            </a>
                                            <p>
                                                @item.Description
                                            </p>
                                            <a href="@url" class="white_bg_btn">Xem thêm</a>
                                        </div>
                                    </div>
                                </div>
                            </article>
                         

                            @*       <nav class="blog-pagination justify-content-center d-flex">
                    <ul class="pagination">
                    <li class="page-item">
                    <a href="#" class="page-link" aria-label="Previous">
                    <span aria-hidden="true">
                    <span class="lnr lnr-chevron-left"></span>
                    </span>
                    </a>
                    </li>
                    <li class="page-item"><a href="#" class="page-link">01</a></li>
                    <li class="page-item active"><a href="#" class="page-link">02</a></li>
                    <li class="page-item"><a href="#" class="page-link">03</a></li>
                    <li class="page-item"><a href="#" class="page-link">04</a></li>
                    <li class="page-item"><a href="#" class="page-link">09</a></li>
                    <li class="page-item">
                    <a href="#" class="page-link" aria-label="Next">
                    <span aria-hidden="true">
                    <span class="lnr lnr-chevron-right"></span>
                    </span>
                    </a>
                    </li>
                    </ul>
                    </nav>
                    *@


                        </div>
                    }
                }


                <div class="pagination-area pt-10 mb-4">

                    <div aria-label="Page navigation example" class="mt-3" >
                        <ul class="pagination">
                            <pager class="pager-controller" list="@Model" asp-controller="news" asp-action="index"></pager>
                        </ul>
                    </div>

                </div>
                <br />

            </div>






            <div class="col-lg-4">
                <div class="blog_right_sidebar">

                    @await Component.InvokeAsync("PopularNews")

                    <aside class="single_sidebar_widget ads_widget">
                        <a href="#"><img class="img-fluid" src="img/blog/add.jpg" alt=""></a>
                        <div class="br"></div>
                    </aside>



                    @await Component.InvokeAsync("MenuLoaiNews")

                </div>
            </div>
        </div>
    </div>
</section>
